extends layout

block content
	h1 Search by UPC

	.submit-content
		form.proposal-form.br(method="Post", action="/query", name="barcodeQuery" id="searchForm")
			h2.sub SEARCH UPC
			input(type="text", id="barcodeSearch", placeholder="BARCODE", size="40", name="barcode" )
			button.btn(type="submit") Submit UPC

	h1 #{post.upc}:___#{post.location}___#{post.length}#{post.type}-#{post.color}__QTY:#{post.quantity}

extends layout

block content
  
  h1(id="header") Add Location to Inventory

  //- .submit-content
  //-  form.proposal-form.br(method="Post", action="/location", name="locationAdd")
  //-   h2.sub Add Location
  //-   h4 Scan Location and start adding products
  //-   input(type="text", placeholder="Location", size="40", name="location" )

extends layout

block content
  
  p(id="header") Welcome to Babe Inventory Scanner




  form(method="Post", action="/query", name="barcodeQuery" id="searchForm")
   h2 Find Location of a Product
   input(type="text", id="barcodeSearch", placeholder="BARCODE", size="40", name="barcode" )
   button(type="submit") Submit Barcode

  form(method="Post", action="/add", name="ProductQuantity" id="add")
   h2 Scan Price and Input Quantity
   input(type="text", placeholder="BARCODEUPC", size="30", name="barcodeupc" )
   input(type="text", placeholder="QTY", size="30", name="quantity" )
   button(type="submit") Submit Quantity for Product

  form(method="Post", action="/locate", name="ProductQuantity")
   h2 Scan by Location and UPC, add quantity
   input(type="text", placeholder="SCAN LOCATION", size="30", name="bin" )
   input(type="text", placeholder="SCAN BARCODEUPC", size="30", name="productupc" )
   input(type="text", placeholder="INPUT QTY", size="30", name="qty" )
   button(type="submit") Submit Quantity for Product

  form(method="Post", action="/locateMulti", name="ProductQuantity")
   h2 Scan by Location and UPC, add quantity
   input(type="text", placeholder="SCAN LOCATION", size="30", name="bin1" )
   input(type="text", placeholder="SCAN BARCODEUPC", size="30", name="productupc1" )
   input(type="text", placeholder="INPUT QTY", size="30", name="qty1" )
   input(type="text", placeholder="SCAN BARCODEUPC", size="30", name="productupc2" )
   input(type="text", placeholder="INPUT QTY", size="30", name="qty2" )
   button(type="submit") Submit Quantity for Product


  form(method="Post", action="/locateThree", name="ProductQuantity")
   h2 Scan by Location and UPC, add quantity
   input(type="text", placeholder="SCAN LOCATION", size="30", name="bin11" )
   input(type="text", placeholder="SCAN BARCODEUPC", size="30", name="productupc11" )
   input(type="text", placeholder="INPUT QTY", size="30", name="qty11" )
   input(type="text", placeholder="SCAN BARCODEUPC", size="30", name="productupc22" )
   input(type="text", placeholder="INPUT QTY", size="30", name="qty22" )
   input(type="text", placeholder="SCAN BARCODEUPC", size="30", name="productupc33" )
   input(type="text", placeholder="INPUT QTY", size="30", name="qty33" )
   button(type="submit") Submit Quantity for Product





  h1 Current Inventory
   ul
    each product, i in products
     li 
       h1 #{product.quantity}

  script.
    $(document).ready(function() {
    $("#barcodeSearch").keyup(function() {
        if ($(this).val().length === 6) {
            $("#searchForm").submit();
            }
        });
    	$('input[name=barcode]').focus();

    	//- Add form submit message to the page
    	$("#add").submit(function(){
    		$('<div class=header>' + value + '</div>').appendTo('#header');
    		})
    });
